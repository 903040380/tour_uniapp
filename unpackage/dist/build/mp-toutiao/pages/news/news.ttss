.news{box-sizing:border-box;border-radius:5px;margin:20rpx 20px;padding:5rpx 0;background:#fff}.news .list{padding:20rpx 10px}.news .list .title{font-size:30rpx;line-height:40rpx}.news .list .body{display:-webkit-box;display:-webkit-flex;display:flex;-webkit-box-pack:justify;-webkit-justify-content:space-between;justify-content:space-between}.news .list .body image{width:300rpx;height:200rpx;border-radius:5px}.news .list .body .info{color:#888}.news .list .body .info .content{display:block;word-wrap:break-word;width:280rpx;font-size:20rpx;line-height:40rpx}.news .list .body .info .time{display:block;margin-top:50rpx;margin-left:150rpx;font-size:20rpx;line-height:40rpx}